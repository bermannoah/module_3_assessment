<h3>Stores within 25 miles of <%= @zipcode %></h3>

<h4><%= @all_stores.count %> Total Stores</h4>

<table class="table">
  <th>Long Name</th>
  <th>City</th>
  <th>Distance</th>
  <th>Phone Number</th>
  <th>Store Type</th>
  <% @all_stores.each do |store| %>
    <tr id="store">
      <td> <%= store.long_name %></td>
      <td> <%= store.city %></td>
      <td> <%= store.distance %></td>
      <td> <%= store.phone_number %></td>
      <td> <%= store.store_type %></td>
    </tr>
  <% end %>
</table>